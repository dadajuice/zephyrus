{
  "name": "zephyrus/zephyrus",
  "description": "Simple PHP framework",
  "authors": [
    {
      "name": "David Tucker",
      "email": "davidt2003@msn.com",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "phug/phug": "^1.11",
    "js-phpize/js-phpize-phug": "^1.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-simplexml": "*",
    "ext-intl": "*",
    "ext-iconv": "*",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-posix": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "ext-zip": "*",
    "ext-ctype": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*.*",
    "ext-xdebug": "*"
  },
  "autoload": {
    "psr-4": {
      "Zephyrus\\": "src/Zephyrus"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zephyrus\\Tests\\": "tests",
      "Locale\\": "tests/locale/cache"
    }
  },
  "config": {
    "allow-plugins": {
      "nodejs-php-fallback/nodejs-php-fallback": true
    }
  }
}
