{
  "name": "zephyrus/zephyrus",
  "description": "Simple PHP framework",
  "authors": [
    {
      "name": "David Tucker",
      "email": "davidt2003@msn.com",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.1",
    "pug-php/pug": "2.*",
    "enygma/expose": "^3.0",
    "php-http/curl-client": "^1.6",
    "guzzlehttp/psr7": "^1.3",
    "ext-pdo": "*",
    "ext-apache": "*",
    "ext-json": "*",
    "ext-simplexml": "*",
    "ext-intl": "*",
    "ext-iconv": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.5.*",
    "codeclimate/php-test-reporter": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Zephyrus\\": "src/Zephyrus"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zephyrus\\Tests\\": "tests"
    }
  }
}
